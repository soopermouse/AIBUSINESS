<header class="relative z-50" x-data="{ mobileMenuOpen: true }">
    <nav class="bg-slate-900/80 backdrop-blur-md border-b border-slate-700/50">
        <div class="max-w-1xs mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                <!-- Mobile menu button -->
                <div class="flex items-center ">
                    <button @click="mobileMenuOpen = !mobileMenuOpen"
                            type="button"
                            class="inline-flex items-center justify-center p-2 rounded-md text-slate-400 hover:text-white hover:bg-slate-700 focus:outline-none"
                            :aria-expanded="mobileMenuOpen.toString()">
                        <!-- Hamburger icon -->
                        <svg class="h-6 w-6" x-show="!mobileMenuOpen" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                        </svg>
                        <!-- Close icon -->
                        <svg class="h-6 w-6" x-show="mobileMenuOpen" x-cloak xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                    </button>
                </div>

                <!-- Rest of your desktop menu and logo... --><h1 align="center">AI BUSINESS SERVICES</h1>
                <img src="https://nxdtech.com/aibs1/assets/img/aibslogo.png" width="130" height="100">
                <!-- ... keep your existing desktop menu code ... -->

                <!-- Mobile menu -->
                <div x-show="mobileMenuOpen"
                     x-transition:enter="transition ease-out duration-100"
                     x-transition:enter-start="opacity-0 scale-95"
                     x-transition:enter-end="opacity-100 scale-100"
                     x-transition:leave="transition ease-in duration-75"
                     x-transition:leave-start="opacity-100 scale-100"
                     x-transition:leave-end="opacity-0 scale-95"
                     x-cloak
                     @click.outside="mobileMenuOpen = false"
                     class=" absolute top-16 left-0 right-0 bg-slate-900/95 z-50">
                    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
                        <a href="{{ path('home') }}" class="block px-3 py-2 rounded-md text-base font-medium text-white" @click="mobileMenuOpen = false">Home</a>
                        <a href="{{ path('about') }}" class="block px-3 py-2 rounded-md text-base font-medium text-white" @click="mobileMenuOpen = false">About</a>
                        <a href="{{ path('app_service') }}" class="block px-3 py-2 rounded-md text-base font-medium text-white" @click="mobileMenuOpen = false">Services</a>
                        <a href="{{ path('contact') }}" class="block px-3 py-2 rounded-md text-base font-medium text-white" @click="mobileMenuOpen = false">Contact</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>
