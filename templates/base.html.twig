<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}AI Business Services{% endblock %}</title>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.13.0/dist/cdn.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    <script src="{{ asset('build/runtime.js') }}" defer></script>
    <script src="{{ asset('build/app.js') }}" defer></script>
    <!--<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" defer></script>-->
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;700&display=swap');
        body {
            font-family: 'Orbitron', sans-serif;
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
            color: #e2e8f0;
            min-height: 100vh;
        }
        @media (min-width: 768px) {
            .desktop-menu-force {
                display: flex !important;
                background-color: red !important; /* Debug color */
            }
        }
        .metallic-text {
            color: #e2e8f0;
            text-shadow: 0 0 5px rgba(226, 232, 240, 0.7),
            0 0 10px rgba(226, 232, 240, 0.5);
        }
        .metallic-border {
            border: 1px solid rgba(226, 232, 240, 0.3);
            box-shadow: 0 0 15px rgba(148, 163, 184, 0.2);
        }
        .service-circle {
            transition: all 0.5s cubic-bezier(0.68, -0.55, 0.27, 1.55);
        }
        .service-circle:hover {
            transform: translateY(-10px) scale(1.05);
            box-shadow: 0 10px 25px rgba(100, 149, 237, 0.4);
        }
        [x-cloak] {
            display: none !important;
        }
    </style>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body class="antialiased">
{% include 'partials/_header.html.twig' %}
<main class="min-h-screen">
    {% block content %}{% endblock %}
</main>
{% include 'partials/_footer.html.twig' %}
{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Smooth transitions between pages, excluding menu links
            const links = document.querySelectorAll('a[href^="/"]:not([data-no-transition]):not([data-turbo="false"])');
            links.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    document.body.classList.add('opacity-0', 'transition-opacity', 'duration-300');
                    setTimeout(() => {
                        window.location.href = this.href;
                    }, 300);
                });
            });

            // Resize handler for mobile menu
            const mobileMenu = document.querySelector('[x-data*="mobileMenuOpen"]');
            const handleResize = () => {
                if (window.innerWidth >= 768 && mobileMenu) {
                    mobileMenu.__x.$data.mobileMenuOpen = open;
                    console.log('Resize: Closed mobile menu');
                }
            };
            window.addEventListener('resize', handleResize);
            handleResize();
        });
    </script>
{% endblock %}
</body>
</html>
