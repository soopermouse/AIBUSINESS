{% extends 'base.html.twig' %}

{% block content %}
    <div x-data="{ activeService: null }" class="relative overflow-hidden min-h-screen flex flex-col items-center justify-center">
        <!-- Animated background -->
        <div class="absolute inset-0 z-0">
            <div class="absolute inset-0 bg-gradient-to-br from-blue-900/20 to-slate-900/50"></div>
            <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1639762681057-408e52192e55?q=80&w=2232&auto=format&fit=crop')] bg-cover bg-center opacity-10"></div>
            <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,rgba(148,163,184,0.1)_0%,transparent_70%)]" ></div>
        </div>

        <div class="relative z-10 w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <!-- Logo Center -->
            <div class="flex justify-center mb-16">
                <div class="w-40 h-40 sm:w-72 sm:h-12 rounded-full bg-gradient-to-br from-blue-800 to-slate-900 metallic-border flex items-center justify-center p-2">
                    <div class="w-full h-full rounded-full  flex items-center justify-center">
                        <img src="https://nxdtech.com/aibs1/assets/img/aibslogo.png" width="300" height="300">
                    </div>
                </div>
            </div>

            <!-- Carousel Menu -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6 sm:gap-8">
                <!-- AI Optimization -->
                <div
                    @click="activeService = activeService === 'optimization' ? null : 'optimization'"
                    :class="activeService === 'optimization' ? 'scale-110 bg-blue-900/50' : 'bg-slate-800/50'"
                    class="service-circle aspect-square rounded-full metallic-border flex flex-col items-center justify-center p-4 cursor-pointer transition-all duration-500"
                    data-url="{{ path('home') }}"
                >
                    <div class="w-16 h-16 sm:w-20 sm:h-20 mb-4 bg-blue-900/30 rounded-full flex items-center justify-center metallic-border">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
                        </svg>
                    </div>
                    <h3 class="text-sm sm:text-base font-medium metallic-text text-center">AI Optimization</h3>
                    <div x-show="activeService === 'optimization'" x-collapse class="mt-2 text-xs sm:text-sm text-blue-200 text-center">
                        Enhance your business processes with intelligent optimization algorithms.
                    </div>
                </div>

                <!-- AI Automation -->
                <div
                    @click="activeService === 'automation' ? window.location.href='{{ path('home') }}' : activeService = 'automation'"
                    :class="activeService === 'automation' ? 'scale-110 bg-blue-900/50' : 'bg-slate-800/50'"
                    class="service-circle aspect-square rounded-full metallic-border flex flex-col items-center justify-center p-4 cursor-pointer"
                >
                    <div class="w-16 h-16 sm:w-20 sm:h-20 mb-4 bg-blue-900/30 rounded-full flex items-center justify-center metallic-border">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                    </div>
                    <h3 class="text-sm sm:text-base font-medium metallic-text text-center">AI Automation</h3>
                    <div x-show="activeService === 'automation'" x-collapse class="mt-2 text-xs sm:text-sm text-blue-200 text-center">
                        Automate repetitive tasks and workflows with cutting-edge AI solutions.
                    </div>
                </div>

                <!-- AI Marketing Services -->
                <div
                    @click="activeService === 'marketing' ? window.location.href='{{ path('home') }}' : activeService = 'marketing'"
                    :class="activeService === 'marketing' ? 'scale-110 bg-blue-900/50' : 'bg-slate-800/50'"
                    class="service-circle aspect-square rounded-full metallic-border flex flex-col items-center justify-center p-4 cursor-pointer"
                >
                    <div class="w-16 h-16 sm:w-20 sm:h-20 mb-4 bg-blue-900/30 rounded-full flex items-center justify-center metallic-border">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                        </svg>
                    </div>
                    <h3 class="text-sm sm:text-base font-medium metallic-text text-center">AI Marketing</h3>
                    <div x-show="activeService === 'marketing'" x-collapse class="mt-2 text-xs sm:text-sm text-blue-200 text-center">
                        Transform your marketing strategy with AI-powered insights and automation.
                    </div>
                </div>

                <!-- AI Personnel Services -->
                <div
                    @click="activeService === 'personnel' ? window.location.href='{{ path('home') }}' : activeService = 'personnel'"
                    :class="activeService === 'personnel' ? 'scale-110 bg-blue-900/50' : 'bg-slate-800/50'"
                    class="service-circle aspect-square rounded-full metallic-border flex flex-col items-center justify-center p-4 cursor-pointer"
                >
                    <div class="w-16 h-16 sm:w-20 sm:h-20 mb-4 bg-blue-900/30 rounded-full flex items-center justify-center metallic-border">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                    </div>
                    <h3 class="text-sm sm:text-base font-medium metallic-text text-center">AI Personnel</h3>
                    <div x-show="activeService === 'personnel'" x-collapse class="mt-2 text-xs sm:text-sm text-blue-200 text-center">
                        Revolutionize your HR processes with intelligent recruitment and management tools.
                    </div>
                </div>
            </div>

            <!-- Animated CTA -->
            <div class="mt-16 text-center">
                <a href="{{ path('contact') }}" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-full shadow-sm text-white bg-gradient-to-r from-blue-600 to-blue-800 hover:from-blue-700 hover:to-blue-900 transition-all duration-300 transform hover:scale-105">
                    Get Started
                    <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 -mr-1 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                    </svg>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
